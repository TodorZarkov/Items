@model IEnumerable<AllDealViewModel>

@{
	ViewData["Title"] = "My Deals";
	ViewBag.ActiveLink = "AllDeal";
}
@if (Model.Any())
{

	<div class="btn-toolbar mb-1" role="toolbar" aria-label="Toolbar with button groups">

		<div class="dropdown me-2">
			<button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
				Order By
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
				<li><a class="dropdown-item" href="#">Action</a></li>
				<li><a class="dropdown-item" href="#">Another action</a></li>
				<li><a class="dropdown-item" href="#">Something else here</a></li>
			</ul>
		</div>
		<div class="dropdown me-5 ">
			<button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
				Group By
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
				<li><a class="dropdown-item" href="#">Action</a></li>
				<li><a class="dropdown-item" href="#">Another action</a></li>
				<li><a class="dropdown-item" href="#">Something else here</a></li>
			</ul>
		</div>


	</div>


	<table class="table table-warning table-striped table-hover table-sm align-middle">
		<thead>
			<tr>
				<th scope="col">Picture</th>
				<th scope="col">Name</th>
				<th scope="col">Status</th>
				<th scope="col">Buyer <i class="far fa-comment"></i></th>
				<th scope="col">Seller <i class="far fa-comment"></i></th>
				<th scope="col">QTY</th>
				<th scope="col">Price</th>
				<th scope="col">Contract Date</th>
				<th scope="col">Send Date</th>
				<th scope="col">Delivery Date</th>
				<th scope="col">Delivery Address</th>
				<th scope="col" class="ms-auto">Manage</th>
			</tr>
		</thead>

		<partial name="_AllDealPartial" />

	</table>

}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>You Haven't Sell Or Bought Anything!</h3>
	</div>
}


