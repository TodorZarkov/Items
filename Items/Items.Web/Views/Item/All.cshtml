@using Items.Web.ViewModels.Item;
@model IEnumerable<AllItemViewModel>

@{
	ViewData["Title"] = "All Items";
	ViewBag.ActiveLink = "AllItem";
}

@if (Model.Any())
{
	<partial name="_AllItemsPartial" />
}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>No Items for Sale Yet!</h3>
	</div>
}
