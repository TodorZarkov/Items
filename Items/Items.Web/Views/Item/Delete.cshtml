@model PreDeleteItemViewModel
@using static Items.Common.Enums.AccessModifier;

<form asp-controller="Item" asp-action="Delete" method="post" class="d-flex justify-content-center align-items-center align-content-center">

	<div class="card mb-3 border border- border-danger" style="max-width: 1200px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="@Model.MainPictureUri" class="img-fluid rounded-start" alt="...">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h4 class="card-title">@Model.Name</h4>
					<p class="card-text"><strong>Categories: </strong>@Model.Categories</p>
					<p class="card-text"><strong>Quantity: </strong>@Model.Quantity @Model.Unit</p>

					<button type="submit" class="btn btn-danger">Delete</button>
					<a class="btn btn-primary" asp-controller="Item" asp-action="Mine">Cancel</a>
				</div>
			</div>
		</div>
	</div>

</form>


