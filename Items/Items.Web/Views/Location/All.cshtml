@model Items.Services.Data.Models.Location.AllLocationServiceModel

@{
	ViewData["Title"] = "Locations";
	ViewBag.ActiveLink = "AllLocation";
}

<div class="btn-group-sm ">
	<a asp-controller="Location"
	   asp-action="Add"
	   type="button"
	   class="btn btn-sm btn-primary me-4 ">Add Location</a>

	<vc:query-filter hits="@Model.TotalLocationsCount" />
</div>

@if (Model.Locations.Any())
{

	<table class="table table-secondary table-striped table-hover align-middle">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">Country</th>
				<th scope="col">Town</th>
				<th scope="col">Address</th>
				<th scope="col">GeoLocation</th>
				<th scope="col">Border</th>
				<th scope="col">Places</th>
				<th scope="col">Items</th>
				<th scope="col">Manage</th>
			</tr>
		</thead>
		<partial name="_AllLocationsPartial" model="@Model.Locations" />

	</table>

}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>No Locations.</h3>
	</div>
}
