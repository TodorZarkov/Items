@model IEnumerable<AllLocationViewModel>

@{
	ViewData["Title"] = "Locations";
	ViewBag.ActiveLink = "AllLocation";
}
@if (Model.Any())
{

	<div class="btn-group-sm ">
		<button type="button" class="btn btn-sm btn-primary me-4 ">Add Location</button>

		<vc:query-filter hits="85" />
	</div>


	<table class="table table-secondary table-striped table-hover align-middle">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">Country</th>
				<th scope="col">Town</th>
				<th scope="col">Address</th>
				<th scope="col">GeoLocation</th>
				<th scope="col">Border</th>
				<th scope="col">Places</th>
				<th scope="col">Items</th>
				<th scope="col">Manage</th>
			</tr>
		</thead>
		<partial name="_AllLocationsPartial" />

	</table>

}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>No Location Added Yet.</h3>
	</div>
}
