@model LocationFormModel

<form 
	  method="post"
	  class="w-50 mx-auto form-floating mb-3"
	  id="LocationFormId">

	<div class="form-floating mb-3 ">
		<input asp-for="@Model.Name" type="text" class="form-control form-control-sm" />
		<label asp-for="@Model.Name"></label>
		<span asp-validation-for="@Model.Name" class="text-danger text-sm-start"></span>
	</div>

	<div class="form-floating mb-3 ">
		<textarea asp-for="@Model.Description" type="text" class="form-control form-control-sm"></textarea>
		<label asp-for="@Model.Description"></label>
		<span asp-validation-for="@Model.Description" class="text-danger text-sm-start"></span>
	</div>

	<div class="form-floating mb-3 ">
		<input asp-for="@Model.GeoLocation" type="text" class="form-control form-control-sm" />
		<label asp-for="@Model.GeoLocation"></label>
		<span asp-validation-for="@Model.GeoLocation" class="text-danger text-sm-start"></span>
	</div>

	<div class="form-floating mb-3 ">
		<input asp-for="@Model.Border" type="text" class="form-control form-control-sm" />
		<label asp-for="@Model.Border"></label>
		<span asp-validation-for="@Model.Border" class="text-danger text-sm-start"></span>
	</div>

	<div class="form-floating mb-3 ">
		<input asp-for="@Model.Country" type="text" class="form-control form-control-sm" />
		<label asp-for="@Model.Country"></label>
		<span asp-validation-for="@Model.Country" class="text-danger text-sm-start"></span>
	</div>

	<div class="form-floating mb-3 ">
		<input asp-for="@Model.Town" type="text" class="form-control form-control-sm" />
		<label asp-for="@Model.Town"></label>
		<span asp-validation-for="@Model.Town" class="text-danger text-sm-start"></span>
	</div>

	<div class="form-floating mb-3 ">
		<input asp-for="@Model.Address" type="text" class="form-control form-control-sm" />
		<label asp-for="@Model.Address"></label>
		<span asp-validation-for="@Model.Address" class="text-danger text-sm-start"></span>
	</div>


	<partial name="_LocationVisibilityPartial" model="@Model.LocationVisibility" />



</form>