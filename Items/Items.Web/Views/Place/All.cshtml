@model Items.Services.Data.Models.Place.AllPlaceServiceModel

@{
	ViewData["Title"] = "Places";
	ViewBag.ActiveLink = "AllPlace";
}

<div class="btn-group-sm ">

	<a asp-controller="Place" asp-action="Add" type="button" class="btn btn-sm btn-primary me-2">Add Place</a>

	<vc:query-filter hits="@Model.TotalPlacesCount" />

</div>

@if (Model.Places.Any())
{

	<table class="table table-secondary table-striped table-hover align-middle">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">Location</th>
				<th scope="col">Items</th>
				<th scope="col">Manage</th>
			</tr>
		</thead>
		<partial name="_AllPlacesPartial" model="Model.Places" />

	</table>

}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>No Placs.</h3>
	</div>
}
