@model IEnumerable<AllPlaceViewModel>

@{
	ViewData["Title"] = "Places";
	ViewBag.ActiveLink = "AllPlace";
}
@if (Model.Any())
{

	<div class="btn-group-sm ">

		<button type="button" class="btn btn-sm btn-primary me-2">Add Place</button>

		<vc:query-filter hits="85" />

	</div>



	<table class="table table-secondary table-striped table-hover align-middle">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">Location</th>
				<th scope="col">Items</th>
				<th scope="col">Manage</th>
			</tr>
		</thead>
		<partial name="_AllPlacesPartial" />

	</table>

}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>No Place Added Yet.</h3>
	</div>
}
