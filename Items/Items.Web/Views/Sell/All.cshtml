@model Items.Services.Data.Models.Item.AllSellServiceModel

@{
	ViewData["Title"] = "My Sellings";
	ViewBag.ActiveLink = "AllSell";
}

<vc:query-filter hits="@Model.TotalSellsCount" />


@if (Model.Sells.Any())
{
	<table class="table table-warning table-striped table-hover table-sm align-middle">
		<thead>
			<tr>
				<th scope="col">Picture</th>
				<th scope="col">Name</th>
				<th scope="col">Type</th>
				<th scope="col">Category</th>
				<th scope="col">Location</th>
				<th scope="col">Place</th>
				<th scope="col">QTY</th>
				<th scope="col">Highest Bid</th>
				<th scope="col" title="Number of Offers">#O</th>
				<th scope="col" title="Number of offers with Barter">#B</th>
				<th scope="col">Price</th>
				<th scope="col">Start</th>
				<th scope="col">End</th>
				<th scope="col" class="ms-auto">Manage</th>
			</tr>
		</thead>

		<partial name="_AllSellsPartial" model="@Model.Sells" />

	</table>

}
else
{
	<div style="margin-top: 40vh" class="d-flex align-items-center justify-content-center">
		<h3>No Sells.</h3>
	</div>
}


