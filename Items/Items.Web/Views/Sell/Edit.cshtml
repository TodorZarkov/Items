@using Items.Web.ViewModels.Category;
@using Items.Web.ViewModels.Currency;
@using Items.Web.ViewModels.Unit;
@using static Items.Common.EntityValidationConstants.Item;

@model AuctionFormModel

@{
	ViewData["Title"] = "Edit Auction";
	ViewBag.ActiveLink = "AllSell";
}

<form asp-area="" asp-controller="Sell" asp-action="Edit" method="post" style="width: 300px;" class="mx-auto">
	<div asp-validation-summary="ModelOnly" class="text-warning"></div>
	<img src="@Url.Action("File", "Home", new {id = @Model.MainPictureId})" style="width: 300px;" class="img-thumbnail mb-3" />
	<input type="hidden" asp-for="@Model.MainPictureId" />


	<div class="mb-3">
		<label asp-for="@Model.Name" class="form-label">Name</label>
		<input type="text" asp-for="@Model.Name" class="form-control"  readonly/>
	</div>

	<div class="mb-3">
		<label asp-for="@Model.StartSell" class="form-label">Start Auction Date</label>
		<input type="date" asp-for="@Model.StartSell" class="form-control" readonly />
		<span asp-validation-for="@Model.StartSell" class="text-danger text-sm-start"></span>
	</div>

	<div class="mb-3">
		<label asp-for="@Model.EndSell" class="form-label">End Auction Date</label>
		<input type="date" asp-for="@Model.EndSell" class="form-control" />
		<span asp-validation-for="@Model.EndSell" class="text-danger text-sm-start"></span>
	</div>



	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Sell" asp-action="All" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
