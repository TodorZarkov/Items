@model QueryFilterViewModel

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
	<!form id="query-filter-form" method="get" class="navbar-collapse collapse d-sm-inline-flex justify-content-center ">

	<div class="input-group d-flex flex-nowrap me-2" style="width:min-content">
		<label class="input-group-text" for="inputGroupSelect01"><i class="fas fa-sort"></i></label>
		<select class="form-select form-select-sm"
				style="width:min-content"
				name="SortBy"
				onchange="this.form.submit()"
				id="inputGroupSelect01">
				@foreach (var sorting in Model.AvailableSorting)
				{
					string isSelected = string.Empty;
					if (Model.Sorting == sorting.ToString())
					{
						isSelected = "selected";
					}
				<!option @isSelected value="@sorting">@(Html.DisplayFor(e => sorting))</!option>
				}
		</select>
	</div>

	<div class="input-group d-flex flex-nowrap me-auto" style="width:min-content">
		<label class="input-group-text" for="inputGroupSelect02"><i class="fas fa-list"></i></label>
		<select class="form-select form-select-sm "
				style="width:min-content"
				name="HitsPerPage"
				onchange="this.form.submit()"
				id="inputGroupSelect02">
			<!option @(Model.HitsPerPage == 4 ? "selected" : string.Empty) value="4">4</!option>
			<!option @(Model.HitsPerPage == 8 ? "selected" : string.Empty) value="8">8</!option>
			<!option @(Model.HitsPerPage == 16 ? "selected" : string.Empty) value="16">16</!option>
			<!option @(Model.HitsPerPage == 24 ? "selected" : string.Empty) value="24">24</!option>
			<!option @(Model.HitsPerPage == 52 ? "selected" : string.Empty) value="52">52</!option>
			<!option @(Model.HitsPerPage == 60 ? "selected" : string.Empty) value="60">60</!option>
			<!option @(Model.HitsPerPage == 100 ? "selected" : string.Empty) value="100">100</!option>
		</select>
	</div>

	<partial name="_PaginationPartial" />

	<partial name="_SearchBarPartial" />

	</!form>
</nav>